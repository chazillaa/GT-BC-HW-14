<h1>dashboard</h1>
{{#each posts as |post|}}
<div class="card">
    <div class="card-body">
        <h5 class="card-title"><a href="/posts/{{post.id}}">{{post_name}}</a></h5>
        <p class="card-text">{{post_data}}</p>
    </div>
    <h6 class="card-footer">Created by: {{user.name}} @ </h6>
</div>
{{/each}}